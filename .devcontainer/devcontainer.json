{
    "name": "Flutter Codespaces",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "remoteUser": "vscode",
    "forwardPorts": [
        8080
    ],
    "postCreateCommand": "/bin/bash -lc '.devcontainer/post_create.sh'",
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter"
            ]
        }
    }
}